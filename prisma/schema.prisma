generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Student {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  address        String
  dob            DateTime
  degreeProgram  String
  enrolledCourses Course[]
}

model Course {
  id         String @id @default(uuid())
  courseName String
  credits    Int
  students   Student[]
}

model Administrator {
  id       String @id @default(uuid())
  username String @unique
  password String
}

model AuditLog {
  id        String   @id @default(uuid())
  adminId   String
  action    String
  timestamp DateTime @default(now())
}

